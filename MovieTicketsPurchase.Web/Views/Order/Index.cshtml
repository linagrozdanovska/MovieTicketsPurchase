@model List<MovieTicketsPurchase.Domain.DomainModels.Order>

<h1>Orders</h1>
<div class="row mb-3">
    <div class="col-12">
        @*<a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>*@
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Number of Tickets</th>
            <th scope="col">Tickets</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@item.TicketsInOrder.Count</td>
                <td>
                    @{string cellContent = "";}
                    @foreach(var ticket in item.TicketsInOrder)
                    {
                        cellContent += ticket.SelectedTicket.MovieName + " ";
                    }
                    @cellContent
                </td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
    
</table>