@model List<MovieTicketsPurchase.Domain.DomainModels.Order>

<h1>Orders</h1>
<div class="row mb-3">
    <div class="col-12">
        @*<a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>*@
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" class="text-right" style="width: 3rem;">#</th>
            <th scope="col" class="text-right" style="width: 15rem;">Number of Tickets</th>
            <th scope="col" class="text-right" style="width: 30rem;">Ordered Tickets</th>
            <th scope="col" class="text-right" style="width: 10rem;">Total Price</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var item = Model[i];
        <tr>
            <th scope="row" class="text-right">@(i + 1)</th>
            <td class="text-right">
                @{int totalTickets = 0;}
                @foreach (var ticket in item.TicketsInOrder)
                {
                    totalTickets += ticket.Quantity;
                }
                @totalTickets
            </td>
            <td class="text-right">
                @foreach (var ticket in item.TicketsInOrder)
                {
                <p>
                    @ticket.SelectedTicket.MovieName (@ticket.Quantity) <br />
                </p>
                }
            </td>
            <td class="text-right">
                @{int totalPrice = 0;}
                @foreach (var ticket in item.TicketsInOrder)
                {
                    totalPrice += ticket.Quantity * ticket.SelectedTicket.Price;
                }
                @totalPrice MKD
            </td>
            <td></td>
            <td></td>
        </tr>
        }
    </tbody>
    
</table>