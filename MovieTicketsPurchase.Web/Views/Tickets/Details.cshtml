@model MovieTicketsPurchase.Web.Models.Domain.Ticket

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="row mt-3">
    <div class="col-4">
        <img class="img-fluid" src="@Model.MovieImage" alt="Movie Poster" style="height: 360px;" />
    </div>
    <div class="col-8">
        <h3>@Model.MovieName</h3>
        <p>@Model.MovieGenre</p>
        <p class="lead">@Model.MovieDescription</p>
        <hr />
        <dl class="list-group-horizontal">
            <dt>Showtime</dt>
            <dd>@Model.ShowTime</dd>
            <dt>Ticket Price</dt>
            <dd>@Model.Price</dd>
        </dl>
        <a class="btn btn-success text-white mt-2" style="width: 12rem;">Buy Ticket</a>
    </div>
</div>
<div class="row mt-5">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-secondary d-inline-block mr-2">&laquo; Back to List</a>
        <a asp-action="Edit"class="btn btn-primary" asp-route-id="@Model.TicketId">Edit</a>
    </div>
</div>
