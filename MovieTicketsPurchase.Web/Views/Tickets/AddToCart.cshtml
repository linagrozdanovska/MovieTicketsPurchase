@model MovieTicketsPurchase.Web.Models.DTO.AddToCartDto

@{
    ViewBag.Title = "Add Ticket to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Ticket To Cart</h1>

<div class="row">
    <div class="col-4">
        <form asp-action="AddToCart" method="post">
            <input type="hidden" asp-for="TicketId" />
            <div class="form-group">
                <label asp-for="SelectedTicket.MovieName" class="control-label"></label>
                <input disabled asp-for="SelectedTicket.MovieName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>